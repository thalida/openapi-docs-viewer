{
  "name": "openapi-docs-viewer",
  "displayName": "OpenAPI Docs Viewer",
  "description": "Display interactive OpenAPI schema documentation in VSCode",
  "author": {
    "name": "Thalida Noel",
    "email": "hello@thalida.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thalida/openapi-docs-viewer"
  },
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.87.2"
  },
  "categories": [
    "Other"
  ],
	"activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "OpenAPI Docs Viewer",
      "properties": {
        "openapi-docs-viewer.theme": {
          "type": "string",
          "default": "system",
          "enum": ["system", "light", "dark"],
          "enumItemLabels": [
            "System",
            "Light",
            "Dark"
          ],
          "enumDescriptions": [
            "Dynamic based on current VSCode theme",
            "Light theme",
            "Dark theme"
          ],
          "description": "Set color scheme for the OpenAPI Docs Viewer (if applicable)"
        },
        "openapi-docs-viewer.defaultRenderer": {
          "type": "string",
          "default": "elements",
          "enum": ["elements", "rapidoc", "redoc", "swagger"],
          "enumItemLabels": [
            "Elements",
            "RapiDoc",
            "Redoc",
            "Swagger"
          ],
          "enumDescriptions": [
            "https://github.com/stoplightio/elements",
            "https://github.com/rapi-doc/RapiDoc",
            "https://github.com/Redocly/redoc",
            "https://github.com/swagger-api/swagger-ui"
          ],
          "description": "URL to the OpenAPI schema"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openapi-docs-viewer",
          "title": "OpenAPI Docs Viewer",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
      "openapi-docs-viewer": [
        {
          "id": "openapi-docs-viewer.webview",
          "name": "OpenAPI Docs Viewer",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "openapi-docs-viewer.configiure",
          "when": "view ==openapi-docs-viewer.webview",
          "group": "navigation@1"
        }
      ]
    },
    "commands": [
      {
        "command": "openapi-docs-viewer.configiure",
        "title": "OpenAPI Docs Viewer: Configure",
        "icon": "$(gear)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "liquidjs": "^10.11.0"
  }
}
